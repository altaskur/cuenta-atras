{
  "name": "cuentra-atras",
  "version": "1.0.1",
  "description": "Un contador para OBS",
  "main": "./src/main.js",
  "homepage": "https://github.com/altaskur/cuentra-atras",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "portable": "electron-builder --win portable",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": {
    "name": "Altaskur",
    "url": "https://github.com/altaskur/altaskur"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/altaskur/cuenta-atras"
  },
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^19.0.11"
  },

  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/ico.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "name": "cuentra_atras"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "icon": "./builder/ico.ico",
    "appId": "cuentra-atras",
    "win":{
      "target": ["nsis"],
      "icon": "./builder/ico.ico"
    },
    "nsis":{
      "installerIcon": "./builder/ico.ico",
      "oneClick":false,
      "allowToChangeInstallationDirectory": true
      
    
    }
  }
}
