{
  "name": "cuentra-atras",
  "version": "1.0.0",
  "description": "Un contador para OBS",
  "main": "./src/main.js",
  "homepage": "https://github.com/altaskur/cuentra-atras",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "portable": "electron-builder --win portable",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Altaskur",
    "url": "https://github.com/altaskur/altaskur"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/altaskur/cuenta-atras"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.9"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "cuentra_atras"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "icon": "./builder/ico.ico"
  }
}
